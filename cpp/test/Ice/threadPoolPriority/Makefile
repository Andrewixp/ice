top_srcdir	= ../../..

CLIENT		= $(call mktestname,client)
SERVER		= $(call mktestname,server)
SERVERCUSTOM	= $(call mktestname,servercustom)

TARGETS		= $(CLIENT) $(SERVER) $(SERVERCUSTOM)

SLICE_OBJS	= Test.o

COBJS		= $(SLICE_OBJS) \
		  Client.o \
		  AllTests.o

SOBJS		= $(SLICE_OBJS) \
		  TestI.o \
		  Server.o

SCOBJS		= $(SLICE_OBJS) \
		  ServerCustomThreadPool.o \
		  TestI.o

OBJS		= $(COBJS) \
		  $(SOBJS) \
		  $(SCOBJS)

include $(top_srcdir)/config/Make.rules

CPPFLAGS	:= -I. -I../../include $(CPPFLAGS)

LINKWITH	:= -lTestCommon $(LIBS)

$(CLIENT): $(COBJS)
	rm -f $@
	$(call mktest,$@,$(COBJS),$(LINKWITH))

$(SERVER): $(SOBJS)
	rm -f $@
	$(call mktest,$@,$(SOBJS),$(LINKWITH))

$(SERVERCUSTOM): $(SCOBJS)
	rm -f $@
	$(call mktest,$@,$(SCOBJS),$(LINKWITH))
